  "/deliverables": {
    "post": {
      "summary": "Création d'un livrable",
      "tags": ["Deliverable"],
      "description": "Permet à un admin de créer un livrable",
      "requestBody": {
        "required": true,
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "comment": {
                  "type": "string",
                  "required": false,
                  "description": "Commentaire du livrable"
                },
                "file": {
                  "type": "string",
                  "format": "binary",
                  "required": true,
                  "description": "Fichier du livrable"
                },
                "trainingDiaryId": {
                  "type": "integer",
                  "required": true,
                  "description": "ID du journal lié au livrable"
                },
                "eventId": {
                  "type": "integer",
                  "required": true,
                  "description": "ID de l'événement lié au livrable"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Création d'un livrable",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": { "type": "integer", "description": "Status du succes de la requete" },
                  "message": { "type": "string", "description": "Message de la requete" },
                  "data": {
                    "type": "object",
                    "description": "Données de la requete",
                    "properties": {
                      "id": { "type": "integer", "description": "Id du livrable" },
                      "comment": { "type": "string", "description": "Commentaire du livrable" },
                      "file": { "type": "string", "description": "Fichier du livrable" },
                      "diaryId": {
                        "type": "integer",
                        "description": "Id du journal lié au livrable"
                      },
                      "eventId": {
                        "type": "integer",
                        "description": "Id de l'événement lié au livrable"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
